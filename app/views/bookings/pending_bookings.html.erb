<div class="wrapper-dark-blue">
<div class="text-center">
  <div class="container">
      <div class="row">
      <div class="small-padded">
      <h1>Vos <b>annonces</b></h1>
      </div>
        <% @pending_bookings.each do |booking| %>
      <% if booking.status == "pending" %>
            <div class="col-md-3 col-sm-6">
                <div class="pricingTable">
                    <div class="pricingTable-header">
                        <span class="price-icon"></span>
                        <span class="price-value"><%=booking.truck.price.ceil%>â‚¬<span class="month">/jour</span></span>
                        <h3 class="heading"><%=  booking.truck.gauge %></h3>
                    </div>
                    <div class="pricingContent">
                        <ul>
                            <li><i class="fa fa-truck"></i><%=booking.truck.category%></li>
                            <li><i class="fa fa-user"></i><%=booking.user.name%></li>
                            <li><i class="fa fa-map" style="color:#F6C667"></i><%= booking.location %>
                            </li>
                            <li><i class="fa fa-calendar"></i>Du <%= booking.starting_date.strftime("%d/%m/%Y") %>
                            </li>
                            <li><i class="fa fa-calendar"></i>Au <%= booking.ending_date.strftime("%d/%m/%Y") %>
                            </li>
                            <% if booking.description.empty? == false %>
                            <li><i class="fa fa-info-circle"></i><%= booking.description %>
                            </li>
                            <% end %>
                        </ul>
                    </div><!-- /  CONTENT BOX-->
                    <div class="pricingTable-signup">
                    <%= link_to 'Valider', validate_booking_path(booking), method: :patch, class: "btn btn-primary" %>
                    <%= link_to 'Refuser', :onclick => 'refuse_booking',class: "btn btn-primary" %>
                    </div>
                </div><!-- BUTTON BOX-->
            </div>
            <% else %>
              <h2>Il n'y a pas de camion disponible</h2>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
