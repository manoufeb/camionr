<div class="wrapper-dark-blue">
<div class="text-center">
  <div class="container">
      <div class="row">
      <div class="small-padded">
      <h1>Vos <b>Réservations</b></h1>
      </div>
        <% @bookings.each do |booking| %>
          <% if booking.truck.availability %>
            <div class="col-md-3 col-sm-6">
                <div class="pricingTable">
                    <div class="pricingTable-header">
                        <span class="price-icon"></span>
                        <span class="price-value"><%=booking.truck.price.ceil%>€<span class="month">/jour</span></span>
                        <h3 class="heading"><%=  booking.truck.gauge %></h3>
                    </div>
                    <div class="pricingContent">
                        <ul>
                            <li><i class="fa fa-check"></i><%=booking.truck.category%></li>
                            <li><i class="fa fa-check"></i><%=booking.truck.description%></li>
                            <li><i class="fa fa-check"></i><%=booking.location%></li>
                            <li>Du <%= booking.starting_date.strftime("%d/%m/%Y") %> Au <%= booking.ending_date.strftime("%d/%m/%Y") %></li>
                        </ul>
                    </div><!-- /  CONTENT BOX-->
                    <div class="status">
                    <p>En attente</p>
                    </div>
                </div><!-- BUTTON BOX-->
            </div>
            <% else %>
              <h2>Il n'y a pas de camion disponible</h2>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
