  <%= simple_form_for(@truck) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :category,label: 'Catégorie', prompt:'Choisir une Catégorie', collection: Truck::CATEGORIES %>
      <%= f.input :gauge,label: 'Type',prompt:'Choisir un Type', collection: Truck::GAUGE %>
      <%= f.input :description,label: 'Description', placeholder: 'Camion tout neuf' %>
      <%= f.input :numberplate,label: 'Immatriculation', placeholder: 'BU-865-75'%>
      <%= f.input :price,label: 'Prix', placeholder: '300'%>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
  <div class="form-actions text-center">
    <%= f.button :submit, class: 'brand-button' %>
  </div>
<% end %>
