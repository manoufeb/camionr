<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <% @trucks.each do |truck| %>
        <% if truck.availability %>
          <div class="product">
            <div class='product-body'>
              <h3><%="#{truck.gauge} #{truck.category}" %></h3>
              <p><%=truck.description%></p>
            </div>
            <ul class="list-inline product-controls hidden-sm hidden-xs">
              <li><p>Prix:<%= truck.price %></p></li>
            </ul>
            <div class="card-body">
              <%= link_to truck.gauge, truck_path(truck) %>
            </div>
            <%= link_to t(".top_call_to_action", default: "booker ce truck"), new_truck_booking_path(truck), class: "button-create-booking btn" %>
          </div>
        <% else %>
          <h2>There is no available truck</h2>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
