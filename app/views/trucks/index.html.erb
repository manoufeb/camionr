<div class="wrapper-dark-blue">
<div class="text-center">
  <div class="container">
      <div class="row">
      <div class="small-padded">
      <h1>Camions <b>disponibles</b></h1>
      </div>
        <% @trucks.each do |truck| %>
          <% if truck.availability %>
            <div class="col-md-3 col-sm-6">
                <div class="pricingTable">
                    <div class="pricingTable-header">
                        <span class="price-icon"></span>
                        <span class="price-value"><%=truck.price.ceil%>â‚¬<span class="month">/jour</span></span>
                        <h3 class="heading"><%=  truck.gauge %></h3>
                    </div>
                    <div class="pricingContent">
                        <ul>
                            <li><i class="fa fa-check"></i><%=truck.category%></li>
                            <li><i class="fa fa-check"></i><%=truck.description%></li>
                            <li><i class="fa fa-star" style="color:#F6C667"></i><i class="fa fa-star" style="color:#F6C667"></i><i class="fa fa-star" style="color:#F6C667"></i></li>
                        </ul>
                    </div><!-- /  CONTENT BOX-->
                    <div class="pricingTable-signup">
                    <%= link_to t(".top_call_to_action", default: "Louer ce truck"), new_truck_booking_path(truck) %>
                    </div>
                </div><!-- BUTTON BOX-->
            </div>
            <% else %>
              <h2>Il n'y a pas de camion disponible</h2>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>