<%= simple_form_for(@truck) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :gauge %>
    <%= f.input :category, collection: Truck::CATEGORIES %>
    <%= f.input :description %>
    <%= f.input :numberplate %>
    <%= f.input :price %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
